<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.iosapp.ioslauncher.ui.pack.PackViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_gradient"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false"
            android:adapter="@{viewModel.adapter}"
            android:overScrollMode="never"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="360:86">

            <com.iosapp.ioslauncher.ui.custom.ScalableCardView
                android:id="@+id/buttonOk"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="119:54"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintHorizontal_bias="0.1369"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="0dp"
                app:scale_by="byHeight"
                app:scalable_corner_radius="0.5">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="119:22"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#00FFFF"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="@string/ok"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.iosapp.ioslauncher.ui.custom.ScalableCardView>

            <com.iosapp.ioslauncher.ui.custom.ScalableCardView
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="119:54"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintHorizontal_bias="0.8631"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="0dp"
                app:scale_by="byHeight"
                app:scalable_corner_radius="0.5">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="119:22"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#00FFFF"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="@string/cancel"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.iosapp.ioslauncher.ui.custom.ScalableCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>