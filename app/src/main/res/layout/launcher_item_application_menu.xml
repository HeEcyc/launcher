<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.accent.launcher.data.InstalledApp"/>

        <variable
            name="viewModel"
            type="com.accent.launcher.ui.app.AppViewModel" />

        <variable
            name="item"
            type="InstalledApp" />

        <variable
            name="isShortcut"
            type="Boolean" />

        <variable
            name="cell"
            type="com.accent.launcher.data.DesktopCell" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="@{item == null ? 0f : 1f}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            app:layout_constraintDimensionRatio="1:1.1"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/appIcon"
                app:layout_constraintBottom_toBottomOf="@id/appIcon"
                app:layout_constraintStart_toStartOf="@id/appIcon"
                app:layout_constraintEnd_toEndOf="@id/appIcon"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/app_item_shadow_gradient"
                android:alpha="0.05"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appIcon"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_margin="20sp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                bind:imageDrawable="@{item.icon}"
                app:tintMode="src_over"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:gravity="center"
                android:maxLines="1"
                android:text="@{item.name}"
                android:textSize="14sp"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appIcon" />

            <androidx.appcompat.widget.AppCompatImageView
                onEnableSelected="@{(item.nonSystemApp || isShortcut) &amp;&amp; viewModel.isSelectionEnabled()}"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@drawable/delete_circle"
                android:onClick="@{() -> cell != null ? cell.updateApp((InstalledApp)null) : viewModel.removeItem(item.packageName)}"
                android:padding="5sp"
                android:src="@drawable/ic_minus"
                android:translationX="5sp"
                android:translationY="-10sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/appIcon"
                app:layout_constraintTop_toTopOf="@id/appIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>