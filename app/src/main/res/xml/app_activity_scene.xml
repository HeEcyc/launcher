<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/beacon"
            android:layout_width="1sp"
            android:layout_height="1sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/bottomMenuHitBox"
            app:layout_constraintHeight_percent="1"/>

        <Constraint
            android:id="@+id/fieldDelete"
            android:layout_width="0dp"
            android:layout_height="96dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/searchBarBottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/searchBarAnchor"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/searchBarAnchor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/menu"/>

        <Constraint
            android:id="@+id/bubbleLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/menu"
            app:layout_constraintBottom_toBottomOf="@id/searchContainer"
            app:visibilityMode="ignore"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/beacon"
            android:layout_width="1sp"
            android:layout_height="1sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="1"/>

        <Constraint
            android:id="@+id/fieldDelete"
            android:layout_width="0dp"
            android:layout_height="96dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/searchBarBottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/searchBarAnchor"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/searchBarAnchor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="parent"/>

        <Constraint
            android:id="@+id/bubbleLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/menu"
            app:layout_constraintBottom_toBottomOf="@id/searchContainer"
            app:visibilityMode="ignore"/>

    </ConstraintSet>

    <Transition
        android:id="@+id/mainTransition"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="100">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorSide="top"
            app:touchAnchorId="@id/beacon" />
    </Transition>

</MotionScene>
